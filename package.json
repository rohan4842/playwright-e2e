{
  "name": "playwright-e2e",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "dotenvx run -f .env.qa -- npx playwright test",
    "test:headed": "dotenvx run -f .env.qa -- npx playwright test --headed",
    "test:qa": "dotenvx run -f .env.qa -- npx playwright test",
    "allure:generate": "npx allure generate allure-results -o allure-report --clean",
    "allure:open": "npx allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "test:qa:allure": "dotenvx run -f .env.qa -- npx playwright test && npm run allure:report"
  },
